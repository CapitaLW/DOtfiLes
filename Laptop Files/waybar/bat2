#!/bin/bash
BAT="/sys/class/power_supply/BAT1"

if [ ! -d "$BAT" ]; then
    echo "BAT1 N/A"
    exit 0
fi

CAP=$(cat "$BAT/capacity")
STATUS=$(cat "$BAT/status")

if [[ "$STATUS" == "Charging" ]]; then
    ICON=""
elif [[ "$CAP" -ge 80 ]]; then
    ICON=""
elif [[ "$CAP" -ge 60 ]]; then
    ICON=""
elif [[ "$CAP" -ge 40 ]]; then
    ICON=""
elif [[ "$CAP" -ge 20 ]]; then
    ICON=""
else
    ICON=""
fi

echo "$ICON    $CAP%"
